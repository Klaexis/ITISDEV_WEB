<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Missing Person Cases</title>

  <!-- BOOTSTRAP 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous" />

  <!-- FONT AWESOME -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- APEX CHART CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.53.0/apexcharts.min.css"
    integrity="sha512-w3pXofOHrtYzBYpJwC6TzPH6SxD6HLAbT/rffdkA759nCQvYi5AHy5trNWFboZnj4xtdyK0AFMBtck9eTmwybg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- LOCAL CSS -->
  <link rel="stylesheet" href="assets/css/global.css" />
  <link rel="stylesheet" href="assets/css/sidebar.css" />
  <link rel="stylesheet" href="assets/css/main.css" />
</head>

<body>
  <!-- SIDEBAR -->
  <%- include('./staples/sidebar.ejs') %>
  
  <!-- MAIN -->
  <main class="main position-absolute overflow-hidden">
    <!-- TOP CONTENT -->
    <div class="topbar bg-dark px-3 pt-2 pb-5">
      <div class="d-flex justify-content-between align-items-center">
        <div class="toggle position-relative ">
          <i class="fa-solid fa-bars text-light"></i>
        </div>
        <!-- User Info -->
        <div class="d-flex align-items-center info-user gap-2">
          <div class="dropdown">
            <a class="user-profile bg-light rounded-circle d-flex align-items-center justify-content-center" href="#"
              role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-user fs-4"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <li>
                <a class="dropdown-item logout-btn" href="#" data-bs-toggle="modal" data-bs-target="#logout">Logout</a>
              </li>
              <hr class="m-0">
              <li><a class="dropdown-item text-secondary" href="#">Made by Crocodilo</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- ANALYTICS -->
      <div class="row gy-3 mt-4">
        <div class="title d-flex align-items-center gap-3">
          <i class="fa-solid fa-chart-bar fs-3 text-light"></i>
          <h4 class="fw-bold text-start m-0 text-light">Missing Report Overview</h4>
        </div>
        <!-- FOUND -->
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card border-0 analysis-card rounded">
            <div class="card-body  d-flex align-items-center justify-content-around flex-wrap gap-4">
              <div class="content text-center">
                <h1 class="card-number fw-bold" id="found-count"><%= missingPersonFound %></h1>
                <h5 class="m-0">FOUND</h5>
              </div>
              <div class="icon">
                <i class="fa-solid fa-user-check fs-1"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- MISSING -->
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card border-0 analysis-card rounded">
            <div class="card-body d-flex align-items-center justify-content-around flex-wrap gap-4">
              <div class="content text-center">
                <h1 class="card-number fw-bold" id="missing-count"><%= missingPersonMissing %></h1>
                <h5 class="m-0">MISSING</h5>
              </div>
              <div class="icon">
                <i class="fa-solid fa-user-slash fs-1"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Mid Content -->
    <div class="container-fluid px-lg-5 px-md-3 px-sm-2 mt-5 main-content">
      <!-- Main Content -->
      <div class="container-fluid mt-5 p-0">
        <div class="container-fluid">
          <div class="d-flex align-items-center justify-content-between bg-dark p-3 table-header text-white">
            <form class="d-flex me-2" role="search">
              <input class="form-control me-2" type="search" placeholder="Search for a person" aria-label="Search">
            </form>
            <div class="d-flex align-items-center">
              <!-- Show total of Unread -->
              <% if(missingUnreadTotal > 0) { %>
                <span style="color: red; font-weight: bold;"><%=missingUnreadTotal%> Unread!</span> <!-- Unread/new mark -->
              <% } else { %>
                <span style="color: gray; font-weight: bold;"><%=missingUnreadTotal%> Unread</span> <!-- Read/new mark -->
              <% } %>
              <i class="fa-solid fa-filter fs-5 ms-2 filter-icon" data-bs-toggle="modal" data-bs-target="#filter-modal"></i>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table table-hover table-striped table-borderless">
              <thead class="table-dark">
                <tr>
                  <th scope="col" class="text-center">Full Name</th>
                  <th scope="col" class="text-center">Age</th>
                  <th scope="col" class="text-center">Last Seen</th>
                  <th scope="col" class="text-center">Date Reported</th>
                  <th scope="col" class="text-center">Assigned Team</th>
                  <th scope="col" class="text-center">Status</th>
                  <th scope="col" class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% missingPersonsInfo.forEach(function (casesMissing) { %>
                <tr>
                  <td>
                    <% if (notification_missing.some(rm => rm.miaID === casesMissing.miaID && rm.readAt == null)) { %>
                      <span class="unread-dot"></span>
                    <% } %>
                    <%=casesMissing.missingFullName%>
                  </td>
                  <td><%=casesMissing.age%></td>
                  <td><%=casesMissing.timeLastSeen%> at <%=casesMissing.areaLastSeen%></td>
                  <td><%=casesMissing.dateSubmitted%></td>

                  <% if(casesMissing.teamID == "None") { %>
                    <td><span style="color: red; font-weight: bold;"><%=casesMissing.teamID%></span></td>
                  <% } else { %>
                    <td><%=casesMissing.teamID%></td>
                  <% } %>

                  <% if (casesMissing.isFound == false) { %>
                  <td class="text-center"><span class="status">Missing</span></td>
                  <% } else { %>
                  <td class="text-center"><span class="status">Found</span></td>
                  <% } %>
                  <td class="d-flex align-items-center justify-content-center gap-2">
                    <button class="table-button btn-sm" data-miaid="<%=casesMissing.miaID%>" data-bs-toggle="modal" data-bs-target="#view-modal<%=casesMissing.miaID%>">
                      <i class="fas fa-eye"></i> View
                    </button>
                    <% if(casesMissing.teamID != "None") { %>
                    <button class="table-button btn-sm" data-bs-toggle="modal" data-bs-target="#report-modal<%= casesMissing.miaID %>">
                      <i class="fas fa-folder-open"></i> Updates
                    </button>
                    <% } %>
                    <button class="table-button btn-sm" data-miaid="<%=casesMissing.miaID%>" data-bs-toggle="modal">
                      <i class="fa fa-check-circle"></i> Resolve
                    </button>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>

          <!--TABLE PAGINATION -->
          <div class="container-fluid mt-3">
            <%- include('./staples/pagination.ejs') %>
            <form id="movePageForm" method="GET" action="/missingperson">
              <input id="movePageInput" name="page" type="hidden" value="<%= page %>">
            </form>
          </div>
          
        </div>
      </div>

    </div>

    <% missingPersonsInfo.forEach(function (casesMissing) { %>
    <!-- View MODAL -->
    <div class="modal fade view-modal" id="view-modal<%=casesMissing.miaID%>" tabindex="-1" aria-labelledby="" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header border-0 d-flex justify-content-center">
            <h1 class="modal-title fs-5 text-center fw-bold" id="">FULL DETAILS</h1>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class ="col-12">
                <% if(casesMissing.missingPersonImage != undefined && casesMissing.missingPersonImage!= null) { %>
                <div class="row mb-3">
                  <div class="col-md-6 center-horizontal">
                    <img style="width:100%" src="data:image/image/png;base64,<%= casesMissing.missingPersonImage.toString('base64')%>">
                  </div>
                </div>
                <% } %>
              </div>
              <div class="col-12">
                <div class="form-group mt-3">
                  Full Name
                  <input type="text" class="form-control" id="miaName" value="<%=casesMissing.missingFullName%>" disabled>
                </div>
              </div>

              <div class="col-lg-6 col-sm-12">
                <div class="form-group mt-3">
                  Age
                  <input type="text" class="form-control" id="miaAge" value="<%=casesMissing.age%>" disabled>
                </div>
              </div>

              <div class="col-lg-6 col-sm-12">
                <div class="form-group mt-3">
                  Sex
                  <input type="text" class="form-control" id="miaSex" value="<%=casesMissing.sex%>" disabled>
                </div>
              </div>

              <div class="col-12">
                <div class="form-group mt-3">
                  Location Last Seen
                  <input type="text" class="form-control" id="miaLocation" value="<%=casesMissing.areaLastSeen%>" disabled>
                </div>
              </div>

              <div class="col-lg-6 col-sm-12">
                <div class="form-group mt-3">
                  Time Last Seen
                  <input type="text" class="form-control" id="miaTime" value="<%=casesMissing.timeLastSeen%>" disabled>
                </div>
              </div>

              <div class="col-lg-6 col-sm-12">
                <div class="form-group mt-3">
                  Emergency Person Contact Number
                  <input type="text" class="form-control" id="miaContactNum" value="<%=casesMissing.contactNum%>" disabled>
                </div>
              </div>

              <div class="col-12">
                <div class="form-group mt-3">
                  Filed By
                  <input type="text" class="form-control" id="miaFiledBy" value="<%=casesMissing.filedBy%>" disabled>
                </div>
              </div>

              <div class="col-lg-6 col-sm-12">
                <div class="form-group mt-3">
                  Date Reported
                  <input type="text" class="form-control" id="miaDateReported" value="<%=casesMissing.dateSubmitted%>" disabled>
                </div>
              </div>

              <div class="col-lg-6 col-sm-12">
                <div class="form-group mt-3">
                  Team Assigned
                  <input type="text" class="form-control" id="miaTeam" value="<%=casesMissing.teamID%>" disabled>
                </div>
              </div>
              <% if(casesMissing.teamID == "None") { %>
              <form action="/assignMissingTeam" method="POST">
                <div class="col-12">
                  <div class="form-group mt-3">
                    <label for="">Assign Team:</label>
                    <select class="form-select" name="selectTeamMIA" id="selectTeamMIA" required aria-label="Default select example">
                      <option value="None" disabled selected>Select Team</option>
                      <% teams.forEach(function (assignTeam) { %>
                      <option value="<%=assignTeam.teamName%>"><%=assignTeam.teamName%></option>
                      <% }); %>
                    </select>
                    <input type="hidden" name="miaID" id="miaID" value="<%=casesMissing.miaID%>">
                    <span style="color: red; font-weight: bold;">NO TEAM ASSIGNED*</span>
                  </div>
                </div>
            
              <div class="modal-footer border-0 mt-5">
                <button type="button" class="modal-button close-button" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="modal-button submit-button">Assign</button>
              </div>
            </form>
            <% } else { %>
            <div class="modal-footer border-0 mt-5">
              <button type="button" class="modal-button close-button" data-bs-dismiss="modal">Close</button>
            </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
    
    <% missingPersonsInfo.forEach(function (casesMissing) { %>
    <!-- Report MODAL -->
    <div class="modal fade" id="report-modal<%=casesMissing.miaID%>" tabindex="-1" aria-labelledby="" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header border-0 d-flex justify-content-center">
            <h1 class="modal-title fs-5 text-center fw-bold" id="">RELATED REPORTS</h1>
          </div>
          <div class="modal-body">
            <% if(casesMissing.reports.length > 0) {
                casesMissing.reports.forEach(function (report) { %>
                <div class="col-lg-6 col-sm-12">
                    <div class="form-group mt-3">
                        Date and Time
                        <%
                        let dateTime = report.dateSubmitted;
                        if (report.timeSubmitted !== null && report.timeSubmitted !== undefined) {
                            dateTime += ' ' + report.timeSubmitted;
                        }
                        %>
                        <input type="text" class="form-control" value="<%=dateTime%>" disabled>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group mt-3">
                        <span><%=report.fullReport%>
                        </span>
                    </div>
                </div>
                <hr>
            <% });
            } else { %>
                <div class="col-12">
                    <div class="form-group mt-3">
                        No Report Given
                    </div>
                </div>
            <% } %>
          </div>

          <div class="modal-footer border-0 mt-5">
            <button type="button" class="modal-button close-button" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <% }); %>

    <!-- DELETE MODAL -->
    <div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header border-0 d-flex justify-content-center">
            <h1 class="modal-title fs-5 text-center fw-bold" id="deleteModalLabel">DELETE CONFIRMATION</h1>
          </div>
          <div class="modal-body text-center">
            <div class="alert alert-info p-4 rounded d-flex flex-column align-items-center  justify-content-center">
              <i class="fa-solid fa-triangle-exclamation fs-1 text-warning"></i>
              <span class="fw-semibold">
                Deleting this item is permanent and cannot be undone. All associated data will be lost forever and
                cannot be recovered.
                Are you sure you want to proceed with this action?
              </span>
            </div>
          </div>
          <div class="modal-footer border-0 d-flex justify-content-end gap-2">
            <button type="button" class="modal-button close-button" data-bs-dismiss="modal">Close</button>
            <button type="button" class="modal-button submit-button">Delete</button>
          </div>
        </div>
      </div>
    </div>


       <!-- FILTER MODAL -->
       <div class="modal fade" id="filter-modal" tabindex="-1" aria-labelledby="filter-modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header border-0 d-flex justify-content-center">
              <h1 class="modal-title fs-5 text-center fw-bold" id="">FILTER</h1>
            </div>
            <div class="modal-body">
              <div class="row gy-5">
                <div class="col-12 ">
                  <label for="" class="fw-bold">Year:</label>
                  <div class="form-group d-flex align-items-center flex-wrap gap-2 year">
                    <input type="checkbox" value="all">
                    <label for="">All</label>
                    <input type="checkbox" value="2025">
                    <label for="">2025</label>
                    <input type="checkbox" value="2024">
                    <label for="">2024</label>
                    <input type="checkbox" value="2023">
                    <label for="">2023</label>
                  </div>
                </div>
  
                <div class="col-12 border-top">
                  <label for="" class="fw-bold">Month:</label>
                  <div class="form-group d-flex align-items-center flex-wrap gap-3 months">
                    <input type="checkbox" value="all">
                    <label for="">All</label>
                    <input type="checkbox" value="January">
                    <label for="">January</label>
                    <input type="checkbox" value="February">
                    <label for="">February</label>
                    <input type="checkbox" value="March">
                    <label for="">March</label>
                    <input type="checkbox" value="April">
                    <label for="">April</label>
                    <input type="checkbox" value="May">
                    <label for="">May</label>
                    <input type="checkbox" value="June">
                    <label for="">June</label>
                    <input type="checkbox" value="July">
                    <label for="">July</label>
                    <input type="checkbox" value="August">
                    <label for="">August</label>
                    <input type="checkbox" value="September">
                    <label for="">September</label>
                    <input type="checkbox" value="October">
                    <label for="">October</label>
                    <input type="checkbox" value="November">
                    <label for="">November</label>
                    <input type="checkbox" value="December">
                    <label for="">December</label>
                  </div>
                </div>
  
                <div class="col-12 border-top">
                  <label for="" class="fw-bold">Age:</label>
                  <div class="form-group d-flex align-items-center flex-wrap gap-3">
                    <input type="checkbox" value="all">
                    <label for="">All</label>
                    <input type="checkbox" value="">
                    <label for="">1-10</label>
                    <input type="checkbox" value="">
                    <label for="">11-20</label>
                    <input type="checkbox" value="">
                    <label for="">21-30</label>
                    <input type="checkbox" value="">
                    <label for="">31-40</label>
                    <input type="checkbox" value="">
                    <label for="">41-50</label>
                    <input type="checkbox" value="">
                    <label for="">51-60</label>
                  </div>
                </div>
  
                <div class="col-12 border-top">
                  <label for="" class="fw-bold">Gender:</label>
                  <div class="form-group d-flex align-items-center flex-wrap gap-3">
                    <input type="checkbox" value="all">
                    <label for="">All</label>
                    <input type="checkbox" value="">
                    <label for="">Male</label>
                    <input type="checkbox" value="">
                    <label for="">Female</label>
  
                  </div>
                </div>
  
                <div class="col-12 border-top">
                  <label for="" class="fw-bold">Status:</label>
                  <div class="form-group d-flex align-items-center flex-wrap gap-3">
                    <input type="checkbox" value="all">
                    <label for="">All</label>
                    <input type="checkbox" value="">
                    <label for="">Found</label>
                    <input type="checkbox" value="">
                    <label for="">Missing</label>
                    <input type="checkbox" value="">
                    <label for="">Deceased</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer mt-4">
              <button type="button" class="modal-button close-button" data-bs-dismiss="modal">Close</button>
              <button type="button" class="modal-button submit-button">Filter</button>
            </div>
          </div>
        </div>
      </div>

    <div class="modal fade" id="logout" tabindex="-1" aria-labelledby="logoutLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header border-0 d-flex justify-content-center">
            <h1 class="modal-title fs-5 text-center fw-bold" id="">
              LOGOUT CONFIRMATION
            </h1>
          </div>
          <div class="modal-body">
            Are you sure you want to logout?
          </div>
          <div class="modal-footer">
            <button type="button" class="modal-button" data-bs-dismiss="modal">Close</button>
            <button type="button" class="modal-button important-button">Logout</button>
          </div>
        </div>
      </div>
    </div>

  </main>

  <script src="assets/JS/bootstrap.bundle.min.js"></script>
  <script src="assets/JS/jquery-3.7.1.min.js"></script>

  <!-- LOCAL SCRIPT -->
  <script type="module" src="assets/JS/main.js"></script>
  <script src="assets/JS/utilities.js"></script>

  <script>
  $('.table-button').on('click', function() {
    if ($(this).text().trim() === 'View') {
      var miaID = $(this).data('miaid'); // assuming you have data-sosid attribute in your button
      $.ajax({
        type: 'GET',
        url: '/missingCaseRead/' + miaID,
        success: function(data) {
          // update the UI to mark the SOS case as resolved
        }
      });
    }
  });

  $(document).ready(function() {
      if (window.location.search.includes('view=')) {
        var miaID = window.location.search.split('view=')[1];
        
        $('#view-modal' + miaID).modal('show');
        history.pushState({}, '', '/missingperson');

        $.ajax({
          type: 'GET',
          url: '/missingCaseRead/' + miaID,
          success: function(data) {
            // update the UI to mark the SOS case as resolved
            
          }
        });
      }
    });

  $('.view-modal').on('hidden.bs.modal', function() {
    window.location.href = window.location.href; // refresh the page
  });
    
  $('.table-button').on('click', function() {
    if ($(this).text().trim() === 'Resolve') {
      var miaID = $(this).data('miaid'); // assuming you have data-miaid attribute in your button
      if (confirm("Are you sure you want to resolve this Missing Person case?")) {
        $.ajax({
          type: 'GET',
          url: '/resolveMissing/' + miaID,
          success: function(data) {
            // update the UI to mark the MIA case as resolved
            if (data.reload) {
                  window.location.href = '/missingperson?page=' + data.page;
              }
          }
        });
      }
    }
  });
  </script>
</body>

</html>