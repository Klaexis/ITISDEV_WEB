  <script>
  $('.table-button').on('click', function() {
    if ($(this).text().trim() === 'View') {
      var miaID = $(this).data('miaid'); // assuming you have data-miaid attribute in your button
      $.ajax({
        type: 'GET',
        url: '/missingCaseRead/' + miaID,
        success: function(data) {
          // update the UI to mark the MIA case as resolved
        }
      });
    }
  });

  $(document).ready(function() {
      if (window.location.search.includes('view=')) {
        var miaID = window.location.search.split('view=')[1];
        
        $('#view-modal' + miaID).modal('show');
        history.pushState({}, '', '/missingperson');

        $.ajax({
          type: 'GET',
          url: '/missingCaseRead/' + miaID,
          success: function(data) {
            // update the UI to mark the MIA case as resolved
            
          }
        });
      }
    });

  $('.view-modal').on('hidden.bs.modal', function() {
    window.location.href = window.location.href; // refresh the page
  });
    
  $('.table-button').on('click', function() {
    if ($(this).text().trim() === 'Resolve') {
      var miaID = $(this).data('miaid'); // assuming you have data-miaid attribute in your button
      if (confirm("Are you sure you want to resolve this Missing Person case?")) {
        $.ajax({
          type: 'GET',
          url: '/resolveMissing/' + miaID,
          success: function(data) {
            // update the UI to mark the MIA case as resolved
            if (data.reload) {
                  window.location.href = '/missingperson?page=' + data.page;
              }
          }
        });
      }
    }
  });
